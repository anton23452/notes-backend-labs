{
    "name": "notes-backend-labs",
    "version": "1.0.0",
    "description": "Simple REST API for notes - lab project",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "dev": "nodemon src/index.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "keywords": [
        "express",
        "rest-api",
        "notes"
    ],
    "author": "anton23452",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "redis": "^4.6.10",
        "express-rate-limit": "^7.1.5",
        "swagger-ui-express": "^5.0.0",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/index.js"
        ],
        "testMatch": [
            "**/tests/**/*.test.js"
        ]
    }
}